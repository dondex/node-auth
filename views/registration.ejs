<!DOCTYPE html>
<html data-bs-theme="light" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <title>Register - Brand</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i&amp;display=swap"
    />
    <link rel="stylesheet" href="/assets/css/baguetteBox.min.css" />
    <link rel="stylesheet" href="/assets/css/vanilla-zoom.min.css" />
  </head>

  <body style="background-image: url(/assets/img/others/1.jpg.webp)">
    <nav
      class="navbar navbar-expand-lg fixed-top bg-body clean-navbar navbar-light"
    >
      <div class="container">
        <a class="navbar-brand logo" href="#">MySql Blogs</a
        ><button
          data-bs-toggle="collapse"
          class="navbar-toggler"
          data-bs-target="#navcol-1"
        >
          <span class="visually-hidden">Toggle navigation</span
          ><span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navcol-1">
          <div class="navbar-nav ms-auto"></div>
          <!-- <a href="/"><button class="btn btn-warning"  style="color: white;" type="button" href>LOGIN</button></a> -->
        </div>
      </div>
    </nav>
    <main class="page registration-page">
      <section class="clean-block clean-form">
        <div class="container" style="padding: 1% 0 1% 0">
          <div class="block-heading">
            <h2 style="font-weight: bold; color: #fff">USER REGISTRATION</h2>
          </div>
          <form method="post">
            <% if(typeof(alert)!="undefined") {%> <% if
            (alert.includes("Invalid. Email already in use.")) { %>
            <div class="alert alert-danger" role="alert"><%= alert %></div>
            <% } else if (alert.includes("User added.")) { %>
            <div class="alert alert-success" role="alert"><%= alert %></div>
            <% } %> <%}%>
            <div class="mb-3">
              <label class="form-label" for="name">Full Name</label
              ><input
                class="form-control item"
                type="text"
                id="name"
                name="fullname"
                required
                data-bs-theme="light"
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label
              ><input
                class="form-control item"
                type="email"
                id="email"
                name="email"
                required
                data-bs-theme="light"
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label
              ><input
                class="form-control item"
                type="password"
                id="password"
                name="password"
                required
                data-bs-theme="light"
              />
            </div>
            <a href="/"
              ><button
                class="btn btn-outline-primary form-control"
                style="color: black"
                type="button"
                href
              >
                Login
              </button></a
            ><br /><br />
            <button class="btn btn-warning form-control" type="submit">
              Register
            </button>
          </form>
        </div>
      </section>
    </main>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/baguetteBox.min.js"></script>
    <script src="/assets/js/vanilla-zoom.js"></script>
    <script src="/assets/js/theme.js"></script>
  </body>
</html>
