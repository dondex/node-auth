<!DOCTYPE html>
<html data-bs-theme="light" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <title>Login - Brand</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i&amp;display=swap"
    />
    <link rel="stylesheet" href="/assets/css/baguetteBox.min.css" />
    <link rel="stylesheet" href="/assets/css/vanilla-zoom.min.css" />
  </head>

  <body style="background-image: url(/assets/img/others/1.jpg.webp)">
    <nav
      class="navbar navbar-expand-lg fixed-top bg-body clean-navbar navbar-light"
    >
      <div class="container">
        <a class="navbar-brand logo" href="#">MySql Blogs</a
        ><button
          data-bs-toggle="collapse"
          class="navbar-toggler"
          data-bs-target="#navcol-1"
        >
          <span class="visually-hidden">Toggle navigation</span
          ><span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navcol-1">
          <div class="navbar-nav ms-auto"></div>
          <!-- <a href="/register"><button class="btn btn-warning" style="color: white;" type="button" href>REGISTER</button></a> -->
        </div>
      </div>
    </nav>
    <main class="page login-page">
      <section class="clean-block clean-form">
        <div class="container" style="padding: 4% 0 4% 0">
          <div class="block-heading">
            <h2 style="font-weight: bold; color: #fff">USER LOGIN</h2>
          </div>
          <form method="post">
            <% if(typeof(alert)!="undefined") {%>
            <div class="alert alert-danger" role="alert" id="contactformalert">
              <%= alert %>
            </div>
            <%}%>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label
              ><input
                class="form-control item"
                type="email"
                id="email"
                name="email"
                required
                data-bs-theme="light"
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label
              ><input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
                data-bs-theme="light"
              />
            </div>
            <!-- <div class="mb-3">
                        <div class="form-check"><input class="form-check-input" type="checkbox" id="checkbox" data-bs-theme="light"><label class="form-check-label" for="checkbox">Remember me</label></div>
                    </div> -->
            <button class="btn btn-primary form-control" type="submit">
              Log In</button
            ><br /><br />
            <a href="/register"
              ><button
                class="btn btn-outline-warning form-control"
                style="color: black"
                type="button"
                href
              >
                Sign Up
              </button></a
            >
          </form>
        </div>
      </section>
    </main>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/baguetteBox.min.js"></script>
    <script src="/assets/js/vanilla-zoom.js"></script>
    <script src="/assets/js/theme.js"></script>
  </body>
</html>
